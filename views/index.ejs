<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Information</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
        }
    </style>
</head>
<body>
    <h1>System Information</h1>

    <!-- System -->
    <h2>System</h2>
    <ul>
        <li>Hostname: <%= systemInfo.hostname %></li>
        <li>OS: <%= systemInfo.os %></li>
        <li>Kernel Version: <%= systemInfo.kernelVersion %></li>
        <li>Uptime: <%= systemInfo.uptime %> seconds</li>
    </ul>

    <!-- Load Average -->
    <h2>Load Average</h2>
    <p style="color: <%= loadColor %>;"><%= loadAvg.toFixed(2) %> %</p>

    <!-- CPU -->
    <h2>CPU</h2>
    <ul>
        <li>Model: <%= cpu.model %></li>
        <li>Number of Cores: <%= cpu.cores %></li>
        <li>CPU Speed: <%= cpu.speed %> MHz</li>
        <li>Temperature: <%= cpu.temperature %>Â°C</li>
    </ul>

    <!-- Network Usage -->
    <h2>Network Usage</h2>
    <table>
        <thead>
            <tr>
                <th>Interface Name</th>
                <th>IP</th>
                <th>Receive Data (MB)</th>
                <th>Transmit Data (MB)</th>
            </tr>
        </thead>
        <tbody>
            <% networkUsage.forEach(net => { %>
            <tr>
                <td><%= net.name %></td>
                <td><%= net.ip %></td>
                <td><%= net.receiveData %></td>
                <td><%= net.transmitData %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Disk Usage -->
    <h2>Disk Usage</h2>
    <table>
        <thead>
            <tr>
                <th>Filesystem</th>
                <th>Mount</th>
                <th>% of Use</th>
                <th>Free</th>
                <th>Used</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <% diskUsage.forEach(disk => { %>
            <tr>
                <td><%= disk.filesystem %></td>
                <td><%= disk.mount %></td>
                <td><%= disk.usePercentage %></td>
                <td><%= disk.free %></td>
                <td><%= disk.used %></td>
                <td><%= disk.total %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Memory Information -->
    <h2>Memory Information</h2>
    <ul>
        <li>% Used: <%= memInfo.usedPercentage.toFixed(2) %> %</li>
        <li>Used: <%= memInfo.used.toFixed(2) %> MB</li>
        <li>Free: <%= memInfo.free.toFixed(2) %> MB</li>
        <li>Total: <%= memInfo.total.toFixed(2) %> MB</li>
    </ul>
</body>
</html>
